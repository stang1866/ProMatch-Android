<?xml version="1.0" encoding="utf-8"?>
<com.takahidesato.android.promatchandroid.adapter.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/osv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/detail_card_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius"
        card_view:cardElevation="@dimen/card_view_elevation"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frl_success_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imv_image_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/rll_status_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/frl_success_image_container"
                android:paddingTop="@dimen/detail_status_bar_vertical_padding"
                android:paddingBottom="@dimen/detail_status_bar_vertical_padding"
                android:background="@color/colorPrimaryDark">
                <TextView
                    android:id="@+id/txv_title_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/detail_status_bar_elements_padding"
                    android:textSize="@dimen/text_size_success_title"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/txv_date_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title_success"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/detail_status_bar_elements_padding"
                    android:textColor="@color/colorWhite"/>
                <LinearLayout
                    android:id="@+id/rll_icon_bar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_date_success"
                    android:paddingTop="@dimen/detail_status_bar_elements_padding"
                    android:paddingBottom="@dimen/detail_status_bar_elements_padding">
                    <ImageView
                        android:id="@+id/imv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_edit_black_24dp"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/imv_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_star_border_black_24dp"/>
                    <ImageView
                        android:id="@+id/imv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_share_black_24dp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/txv_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rll_status_bar"
                android:textSize="@dimen/detail_memo_text_size"
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_memo"
                android:layout_alignParentBottom="true"
                android:visibility="gone">
                <EditText
                    android:id="@+id/edt_memo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/detail_memo_text_hint"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.takahidesato.android.promatchandroid.adapter.ObservableScrollView>